                        </filter>
                        <filter>
                            <artifact>org.mapdb</artifact>
                            <includes>
                                <include>**</include>
                            </includes>
                        </filter>
                        <filter>
                            <artifact>com.google.guava</artifact>
                            <includes>
                                <include>**</include>
                            </includes>
                        </filter>
                    </filters>
